@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "Forgot / Reset Password";
}

<style>
    body {
        background: linear-gradient(135deg, #fff4e0, #ffe6b3);
        font-family: 'Poppins', sans-serif;
    }

    .forgot-card {
        border-radius: 15px;
        box-shadow: 0 10px 25px rgba(255, 165, 0, 0.15);
        overflow: hidden;
        max-width: 450px;
        margin: 80px auto;
    }

    .forgot-header {
        background: linear-gradient(90deg, #ffb347, #ffcc33);
        color: #fff;
        padding: 25px 15px;
        text-align: center;
    }

        .forgot-header h2 {
            font-weight: 700;
            font-size: 1.8rem;
        }

    .form-control {
        background-color: #ffffff;
        color: #3e3e3e;
    }

        .form-control:focus {
            border-color: #ff9900;
            box-shadow: 0 0 8px rgba(255, 153, 0, 0.5);
        }

        .form-control::placeholder {
            color: #b36b00;
        }

    .btn-reset {
        background-color: #ff9900;
        color: white;
        font-weight: 600;
        transition: 0.3s;
        border-radius: 0.375rem;
    }

        .btn-reset:hover {
            background-color: #e68a00;
        }

    .card-body {
        background-color: #ffffff;
        padding: 30px;
    }

    .text-muted a {
        text-decoration: none;
        color: #ff9900;
        font-weight: 500;
    }
</style>

<div class="forgot-card card">
    <div class="forgot-header">
        <h2><i class="bi bi-key-fill"></i> Forgot / Reset Password</h2>
        <p>@(ViewBag.ShowResetFields ? "Enter your new password" : "Enter your registered email")</p>
    </div>

    <div class="card-body">
        @if (ViewBag.ErrorMessage != null)
        {
            <div class="alert alert-danger text-center">@ViewBag.ErrorMessage</div>
        }

        <form action="@Url.Action("ForgotPassword", "Admin")" method="post">
            @Html.AntiForgeryToken()

            <div class="mb-3">
                <label for="Email" class="form-label">Email</label>
                <input type="email" id="Email" name="Email" class="form-control" placeholder="Registered Email"
                       value="@(ViewBag.Email ?? "")" required />
            </div>

            @if (ViewBag.ShowResetFields != null && ViewBag.ShowResetFields == true)
            {
                <div class="mb-3">
                    <label for="NewPassword" class="form-label">New Password</label>
                    <input type="password" id="NewPassword" name="NewPassword" class="form-control" placeholder="New Password" required />
                </div>
                <div class="mb-3">
                    <label for="ConfirmPassword" class="form-label">Confirm Password</label>
                    <input type="password" id="ConfirmPassword" name="ConfirmPassword" class="form-control" placeholder="Confirm Password" required />
                </div>
            }

            <button type="submit" class="btn btn-reset w-100 rounded-3" name="step" value="@(ViewBag.ShowResetFields ? "reset" : "email")">
                @(ViewBag.ShowResetFields ? "Reset Password" : "Next")
            </button>

            <p class="text-center mt-3 text-muted">
                Remembered? <a href="@Url.Action("Login","Admin")">Login here</a>
            </p>
        </form>
    </div>
</div>

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">
