@model OnlineClinicApplication.Models.Admin

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "Admin Registration";
}

<style>
    body {
        background: linear-gradient(135deg, #fff4e0, #ffe6b3);
        font-family: 'Poppins', sans-serif;
    }

    .register-card {
        border-radius: 15px;
        box-shadow: 0 10px 25px rgba(255, 165, 0, 0.15);
        overflow: hidden;
        max-width: 450px;
        margin: 80px auto;
    }

    .register-header {
        background: linear-gradient(90deg, #ffb347, #ffcc33);
        color: #fff;
        padding: 25px 15px;
        text-align: center;
    }

        .register-header h2 {
            font-weight: 700;
            font-size: 1.8rem;
        }

    .form-control {
        background-color: #ffffff;
        color: #3e3e3e;
    }

        .form-control:focus {
            border-color: #ff9900;
            box-shadow: 0 0 8px rgba(255, 153, 0, 0.5);
        }

        .form-control::placeholder {
            color: #b36b00;
        }

    .btn-register {
        background-color: #ff9900;
        color: white;
        font-weight: 600;
        transition: 0.3s;
        border-radius: 0.375rem;
    }

        .btn-register:hover {
            background-color: #e68a00;
        }

    .card-body {
        background-color: #ffffff;
        padding: 30px;
    }

    .text-muted a {
        text-decoration: none;
        color: #ff9900;
        font-weight: 500;
    }
</style>

<div class="register-card card">
    <div class="register-header">
        <h2><i class="bi bi-person-badge-fill"></i> Admin Registration</h2>
        <p>Create your admin account</p>
    </div>

    <div class="card-body">
        @if (ViewBag.ErrorMessage != null)
        {
            <div class="alert alert-danger text-center">@ViewBag.ErrorMessage</div>
        }

        @using (Html.BeginForm("Register", "Admin", FormMethod.Post))
        {
            @Html.AntiForgeryToken()

            <div class="mb-3">
                @Html.LabelFor(m => m.Username)
                @Html.TextBoxFor(m => m.Username, new { @class = "form-control", placeholder = "Full Name" })
                @Html.ValidationMessageFor(m => m.Username, "", new { @class = "text-danger" })
            </div>

            <div class="mb-3">
                @Html.LabelFor(m => m.Email)
                @Html.TextBoxFor(m => m.Email, new { @class = "form-control", placeholder = "Email", type = "email" })
                @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })
            </div>

            <div class="mb-3">
                @Html.LabelFor(m => m.Password)
                @Html.PasswordFor(m => m.Password, new { @class = "form-control", placeholder = "Password" })
                @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })
            </div>

            <div class="mb-3">
                @Html.LabelFor(m => m.ConfirmPassword)
                @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control", placeholder = "Confirm Password" })
                @Html.ValidationMessageFor(m => m.ConfirmPassword, "", new { @class = "text-danger" })
            </div>

            <button type="submit" class="btn btn-register w-100 rounded-3">Register</button>

            <p class="text-center mt-3 text-muted">
                Already registered? <a href="@Url.Action("Login", "Admin")">Login here</a>
            </p>
        }
    </div>
</div>

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">
