@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "Admin Login";
}

<style>
    body {
        background: linear-gradient(135deg, #fff4e0, #ffe6b3);
        font-family: 'Poppins', sans-serif;
    }

    .login-card {
        border-radius: 15px;
        box-shadow: 0 10px 25px rgba(255, 165, 0, 0.15);
        overflow: hidden;
        max-width: 450px;
        margin: 80px auto;
    }

    .login-header {
        background: linear-gradient(90deg, #ffb347, #ffcc33);
        color: #fff;
        padding: 25px 15px;
        text-align: center;
    }

        .login-header h2 {
            font-weight: 700;
            font-size: 1.8rem;
        }

    .form-control {
        background-color: #ffffff;
        color: #3e3e3e;
    }

        .form-control:focus {
            border-color: #ff9900;
            box-shadow: 0 0 8px rgba(255, 153, 0, 0.5);
        }

        .form-control::placeholder {
            color: #b36b00;
        }

    .btn-login {
        background-color: #ff9900;
        color: white;
        font-weight: 600;
        transition: 0.3s;
        border-radius: 0.375rem;
    }

        .btn-login:hover {
            background-color: #e68a00;
        }

    .card-body {
        background-color: #ffffff;
        padding: 30px;
    }

    .text-muted a {
        text-decoration: none;
        color: #ff9900;
        font-weight: 500;
    }
</style>

<div class="login-card card">
    <div class="login-header">
        <h2><i class="bi bi-shield-lock-fill"></i> Admin Login</h2>
        <p>Enter your credentials to access dashboard</p>
    </div>

    <div class="card-body">
        @if (TempData["SuccessMessage"] != null)
        {
            <div class="alert alert-success text-center">@TempData["SuccessMessage"]</div>
        }

        @if (ViewBag.ErrorMessage != null)
        {
            <div class="alert alert-danger text-center">@ViewBag.ErrorMessage</div>
        }

        @using (Html.BeginForm("Login", "Admin", FormMethod.Post))
        {
            @Html.AntiForgeryToken()

            <div class="mb-3">
                @Html.Label("Email", new { @class = "form-label" })
                @Html.TextBox("Email", null, new { @class = "form-control", placeholder = "Enter your email" })
            </div>

            <div class="mb-3">
                @Html.Label("Password", new { @class = "form-label" })
                @Html.Password("Password", null, new { @class = "form-control", placeholder = "Enter your password" })
            </div>

            <button type="submit" class="btn btn-login w-100 rounded-3">Login</button>

            <div class="mt-3 text-center text-muted">
                New user? <a href="@Url.Action("Register", "Admin")">Register Here</a><br />
                <a href="@Url.Action("ForgotPassword", "Admin")">Forgot Password?</a>
            </div>
        }
    </div>
</div>

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">
